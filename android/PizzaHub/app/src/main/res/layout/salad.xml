<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/greenSaladImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/gsalad"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/greenSaladText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Green Salad: $4.95"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/pastaSaladImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/psalad"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/pastaSaladText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasta Salad: $4.95"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>