<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ajn54.pitt.edu.pizzahub.MainActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only available in store"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/browniesImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/bdessert"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/browniesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brownies: $4.95"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/cinnamonBunsImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/crdessert"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/cinnamonBunsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cinnamon Buns: $5.50"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/applePiePizzaImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/apdessert"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/applePiePizzaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple Pie Pizza: $7.95"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/whiteSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/white"
                tools:ignore="ContentDescription" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
