<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ajn54.pitt.edu.pizzahub.MainActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/priceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Small: $7.95  Medium: $9.95  Large: $11.95"
                android:textAlignment="center"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/cheeseImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/cpizza"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/cheeseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Cheese Pizza"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextViewEdits" />

            <ImageView
                android:id="@+id/pepperoniImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/ppizza"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/pepperoniText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Pepperoni Pizza"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage,TextViewEdits" />

            <ImageView
                android:id="@+id/sausageImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/spizza"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/sausageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Sausage Pizza"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage,TextViewEdits" />

            <ImageView
                android:id="@+id/meatloversImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/mlpizza"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/meatloversText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Meat Lovers Pizza"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage,TextViewEdits" />

            <ImageView
                android:id="@+id/alfredoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/apizza"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/alfredoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Alfredo Pizza"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage,TextViewEdits" />

            <ImageView
                android:id="@+id/veggieImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/vpizza"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/veggieText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Veggie Pizza"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage,TextViewEdits" />

            <ImageView
                android:id="@+id/whiteSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/white"
                tools:ignore="ContentDescription,InefficientWeight" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
