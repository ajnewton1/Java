<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf" >

            <ImageView
                android:id="@+id/garlicBreadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/gcbside"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/garlicBreadText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Garlic Bread: $3.00"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/soupImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                app:srcCompat="@drawable/sside"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/soupText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soup: $2.50"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>